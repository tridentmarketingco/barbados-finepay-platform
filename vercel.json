{
  "builds": [
    {
      "src": "backend/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "pythonVersion": "3.11",
        "installCommand": "pip install -r requirements.txt"
      }
    },
    {
      "src": "frontend",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/wsgi.py"
    },
    {
      "src": "/health",
      "dest": "backend/wsgi.py"
    },
    {
      "src": "/ready",
      "dest": "backend/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/index.html"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "ENVIRONMENT": "production"
  }
}

