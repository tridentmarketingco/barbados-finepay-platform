# PayFine Platform - Environment Configuration Template
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
# SQLite (Development)
DATABASE_URL=sqlite:///payfine.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://user:password@localhost:5432/payfine

# MySQL (Alternative)
# DATABASE_URL=mysql://user:password@localhost:3306/payfine

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# PowerTranz Payment Gateway Configuration
POWERTRANZ_MERCHANT_ID=88806220
POWERTRANZ_PASSWORD=your-powertranz-password
POWERTRANZ_API_URL=https://staging.ptranz.com
POWERTRANZ_HPP_PAGESET=PTZ/PayFine
POWERTRANZ_HPP_PAGENAME=payfine
POWERTRANZ_MERCHANT_RESPONSE_URL=http://localhost:3000/hpp-callback

# Encryption Key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-encryption-key-here

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development

# Multi-Tenant Configuration
DEFAULT_GOVERNMENT_ID=

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@payfine.com

# SMS Configuration (Optional - for notifications)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Azure Configuration (Production only)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_KEY_VAULT_URL=
AZURE_APP_INSIGHTS_KEY=

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_TRIDENT_ID=false
